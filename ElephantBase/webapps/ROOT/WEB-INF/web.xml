<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
    xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">
  <display-name>象棋巫师用户中心</display-name>
<!--
  <context-param>
    <param-name>configuration</param-name>
    <param-value>deployment</param-value>
  </context-param>
-->
  <filter>
    <filter-name>UsersApp</filter-name>
    <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
    <init-param>
      <param-name>applicationClassName</param-name>
      <param-value>net.elephantbase.users.UsersApp</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </filter>
  <filter-mapping>
    <filter-name>UsersApp</filter-name>
    <url-pattern>/users/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>QuestionnaireApp</filter-name>
    <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
    <init-param>
      <param-name>applicationClassName</param-name>
      <param-value>net.elephantbase.questionnaire.QuestionnaireApp</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </filter>
  <filter-mapping>
    <filter-name>QuestionnaireApp</filter-name>
    <url-pattern>/questionnaire/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>XQBaseApp</filter-name>
    <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
    <init-param>
      <param-name>applicationClassName</param-name>
      <param-value>net.elephantbase.xqbase.XQBaseApp</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </filter>
  <filter-mapping>
    <filter-name>XQBaseApp</filter-name>
    <url-pattern>/xqbase/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>XQBoothServlet</servlet-name>
    <servlet-class>net.elephantbase.xqbooth.XQBoothServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>XQBoothServlet</servlet-name>
    <url-pattern>/xqbooth/*</url-pattern>
  </servlet-mapping>
</web-app>