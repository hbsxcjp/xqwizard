			<COLUMN>
				<!-- soundexed name -->
				<NAME> Soundex </NAME>
				<TYPE> CHAR </TYPE>
				<SIZE> 6 </SIZE>
				<NOT_NULL/>
				<DEFAULT> '-' </DEFAULT>
			</COLUMN>
			<INDEX>
				<COLUMN> Soundex </COLUMN>
