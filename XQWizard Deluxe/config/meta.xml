    <SCHEMA>
        <NAME> META </NAME>
        <VERSION> 1001 </VERSION>
		<!-- - - - - - - - - - - - - - - - - - - - -->
		<!-- 	MetaInfo: stores meta data versions  -->
		<!-- - - - - - - - - - - - - - - - - - - - -->
		<TABLE>
			<!-- stores information about the current meta data version -->
			<NAME> MetaInfo </NAME>
			<VERSION> 101 </VERSION>
			<COLUMN>
				<!-- Property Name (e.g. table version) 
					DATABASE_VERSION		meta data version (compared to <VERSION>)
					TABLE_VERSION			table version (compared to <VERSION>)
				-->
				<NAME> Property </NAME>
				<TYPE> VARCHAR</TYPE>
				<SIZE> 64 </SIZE>
				<NOT_NULL/>
				<INDEX/>
			</COLUMN>
			<COLUMN>
				<!-- Schema Name -->
				<NAME> SchemaName </NAME>
				<TYPE> VARCHAR </TYPE>
				<SIZE> 255 </SIZE>
				<INDEX/>
			</COLUMN>
			<COLUMN>
				<!-- Table Name -->
				<NAME> TableName </NAME>
				<TYPE> VARCHAR </TYPE>
				<SIZE> 255 </SIZE>
				<INDEX/>
			</COLUMN>
			<COLUMN>
				<!-- Version -->
				<NAME> Version </NAME>
				<TYPE> INTEGER </TYPE>
			</COLUMN>
			<COLUMN>
				<!--
					0 = table is analyze
					>0 tables needs to be anaylzed
				-->
				<NAME> Dirty </NAME>
				<TYPE> TINYINT </TYPE>
			</COLUMN>
			<PRIMARY_KEY>
				
			</PRIMARY_KEY>
		</TABLE>
	</SCHEMA>

