<DATABASE-META-DATA>
	<SCHEMA>
		<!-- - - - - - - - - - - -  -->
		<!--	Database Definition	-->
		<!-- - - - - - - - - - - -  -->
		<NAME> MAIN </NAME>
		<VERSION> 1007 </VERSION>
		<TABLE>
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<!--	Opening Index (maps positions to opening codes and names)  -->
			<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
			<NAME> Opening </NAME>
			<VERSION> 101 </VERSION>
			<COLUMN>
				<NAME> Id </NAME>
				<TYPE> INTEGER </TYPE>
				<PRIMARY_KEY/>
				<NOT_NULL/>
			</COLUMN>
			<COLUMN>
				<!-- hash key identifying a position -->
				<NAME> HashKey </NAME>
				<TYPE> BIGINT </TYPE>
				<NOT_NULL/>
				<DEFAULT> 0 </DEFAULT>
				<INDEX/>
			</COLUMN>
			<COLUMN>
				<!-- game ply (may be used to detect transpositions) -->
				<NAME> Ply </NAME>
				<TYPE> INTEGER </TYPE>
			</COLUMN>
			<COLUMN>
				<!-- ECO opening code -->
				<NAME> ECO </NAME>
				<TYPE> CHAR </TYPE>
				<SIZE> 3 </SIZE>
				<NOT_NULL/>
				<DEFAULT> '-' </DEFAULT>
				<INDEX/>
			</COLUMN>
			<COLUMN>
				<!-- opening name -->
				<NAME> Name </NAME>
				<TYPE> VARCHAR </TYPE>
				<SIZE> 255 </SIZE>
				<NOT_NULL/>
			</COLUMN>
			<INDEX>
				<COLUMN>Name</COLUMN>
				<COLUMN>Id</COLUMN>
			</INDEX>
			<COLUMN>
				<!-- soundexed name -->
				<NAME> Soundex </NAME>
				<TYPE> CHAR </TYPE>
				<SIZE> 6 </SIZE>
				<NOT_NULL/>
				<DEFAULT> '-' </DEFAULT>
			</COLUMN>
			<INDEX>
				<COLUMN>Soundex</COLUMN>
				<COLUMN>Id</COLUMN>
			</INDEX>
			<INITIAL>
				0, 0, 0, '-', '-', '-'
			</INITIAL>
		</TABLE>
		<!-- - - - - - - - - -->
