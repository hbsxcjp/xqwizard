        <!--	Collection of Games (= one PGN file) -->
        <!-- - - - - - - - - - - - - - - - - - - - -->
        <TABLE pack="true">
            <!-- models a PGN file -->
            <NAME> IO_Collection </NAME>
            <VERSION> 101 </VERSION>
            <COLUMN>
                <!-- primary key -->
                <NAME> Id </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
                <PRIMARY_KEY/>
            </COLUMN>
            <COLUMN>
                <!-- parent folder -->
                <NAME> PId </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- Collection Name (initially name of local or downloaded file) -->
                <NAME> Name </NAME>
                <TYPE> VARCHAR </TYPE>
                <SIZE> 255 </SIZE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!--    bit set of attributes
                    0x80    marked for deletion
                    0x40    system collection (trash,clipboard,autosave)
                -->
                <NAME> Attributes </NAME>
                <TYPE> TINYINT </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- original file name or URL -->
                <NAME> SourceURL </NAME>
                <TYPE> VARCHAR </TYPE>
                <SIZE> 255 </SIZE>
            </COLUMN>
            <COLUMN>
                <!-- number of games in this collection -->
                <NAME> GameCount </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
            </COLUMN>
        </TABLE>
        <!-- - - - - - - -->
        <!--	a Game		 -->
        <!--	this table stores the fixed-length data for a game record		-->
        <!--	variable lenght data is stored in MoreGame		-->
        <!-- - - - - - - -->
        <TABLE pack="true">
            <!-- models a single game in a pgn file -->
            <NAME> IO_Game </NAME>
            <VERSION> 101 </VERSION>
<!--
            <COLUMN>
                <! - - primary key - - >
                <NAME> Id </NAME>
                <TYPE> INTEGER </TYPE>
                <PRIMARY_KEY/>
                <NOT_NULL/>
            </COLUMN>
-->
            <COLUMN>
                <!-- reference to collcetion -->
                <NAME> CId </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- index in collection (starting at 1) -->
                <NAME> Idx </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- bit set of attributes
                    0x80    marked for deletion
                    0x01    has variation lines
                    0x02    has comments
                -->
                <NAME> Attributes </NAME>
                <TYPE> TINYINT </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- number of plies in game -->
                <NAME> PlyCount </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- result of game -->
                <NAME> Result </NAME>
                <TYPE> TINYINT </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- white player name -->
                <NAME> WhiteId </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- black player name -->
                <NAME> BlackId </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
                <!-- may be empty; NOT NULL makes the index more efficient -->
            </COLUMN>
            <COLUMN>
                <!-- white player's ELO rating -->
                <NAME> WhiteELO </NAME>
                <TYPE> INTEGER </TYPE>
            </COLUMN>
            <COLUMN>
                <!-- black player's ELO rating -->
                <NAME> BlackELO </NAME>
                <TYPE> INTEGER </TYPE>
            </COLUMN>
            <COLUMN>
                <!-- event -->
                <NAME> EventId </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- site where game was played -->
                <NAME> SiteId </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- date of game -->
                <NAME> GameDate </NAME>
                <TYPE> DATE </TYPE>
            </COLUMN>
            <COLUMN>
                <!-- start of event -->
                <NAME> EventDate </NAME>
                <TYPE> DATE </TYPE>
            </COLUMN>
            <COLUMN>
                <!-- date flags	-->
                <NAME> DateFlags </NAME>
                <TYPE> SMALLINT </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- opening name -->
                <NAME> OpeningId </NAME>
                <TYPE> INTEGER </TYPE>
                <NOT_NULL/>
            </COLUMN>
            <COLUMN>
                <!-- ECO opening code -->
                <NAME> ECO </NAME>
                <TYPE> CHAR </TYPE>
                <SIZE> 3 </SIZE>
            </COLUMN>
            <COLUMN>
                <!-- annotator -->
                <NAME> AnnotatorId </NAME>
                <TYPE> INTEGER </TYPE>
            </COLUMN>
            <COLUMN>
                <!-- white player's title (IM, GM, etc.) -->
                <NAME> WhiteTitle </NAME>
                <TYPE> VARCHAR </TYPE>
                <SIZE> 32 </SIZE>
            </COLUMN>
            <COLUMN>
                <!-- black player's title (IM, GM, etc.) -->
                <NAME> BlackTitle </NAME>
                <TYPE> VARCHAR </TYPE>
                <SIZE> 32 </SIZE>
            </COLUMN>
            <COLUMN>
                <!-- round (not necessarily numeric, e.g. "semi-final" -->
                <NAME> Round </NAME>
                <TYPE> VARCHAR </TYPE>
                <SIZE> 32 </SIZE>
            </COLUMN>
            <COLUMN>
                <!-- board (e.g. in team events) -->
                <NAME> Board </NAME>
                <TYPE> VARCHAR </TYPE>
                <SIZE> 32 </SIZE>
            </COLUMN>
            <COLUMN>
                <!-- initial position (if different from standard) -->
                <NAME> FEN </NAME>
                <TYPE> VARCHAR </TYPE>
                <SIZE> 128 </SIZE>
                <!-- INDEX do we need an index ? -->
            </COLUMN>
            <COLUMN>
                <!-- non-standard PGN tags
                     list of "key=value", separated by semicolons
                 -->
                <NAME> Info </NAME>
                <TYPE> VARCHAR </TYPE>
                <SIZE> 255 </SIZE>
            </COLUMN>
            <COLUMN>
                <!-- the actual game lines and variations -->
                <NAME> Bin </NAME>
                <TYPE> LONG VARBINARY </TYPE>
            </COLUMN>
            <COLUMN>
                <!-- comments -->
                <NAME> Comments </NAME>
                <TYPE> LONG VARCHAR</TYPE>
            </COLUMN>
	        <COLUMN>
	            <!-- position hash keys (main line) -->
	            <NAME> PosMain </NAME>
	            <TYPE> LONG VARCHAR </TYPE>
	        </COLUMN>
	        <COLUMN>
	            <!-- position hash keys (var. lines) -->
	            <NAME> PosVar </NAME>
	            <TYPE> LONG VARCHAR </TYPE>
	        </COLUMN>
        </TABLE>
    </SCHEMA>
